<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jinqiu.zombieattack"
    android:versionCode="1"
    android:versionName="1.0.0"
    >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        
        <activity android:name=".view.activities.MainMenu" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".view.activities.HighScoresMenu" />
        <activity android:name=".view.activities.TutorialMenu" />
        <activity android:name=".view.activities.CreditMenu" />
        <activity android:name=".view.activities.GamePlay" />

        <activity android:name=".view.activities.PauseMenu"
            android:theme="@android:style/Theme.Translucent" />
        <activity android:name=".view.activities.WinMenu"
            android:theme="@android:style/Theme.Translucent" />
        <activity android:name=".view.activities.LoseMenu"
            android:theme="@android:style/Theme.Translucent" />
    </application>

</manifest>
